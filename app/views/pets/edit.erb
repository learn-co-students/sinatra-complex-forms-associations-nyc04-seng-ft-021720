<h1>Update Pet</h1>


<form action="/pets/<%=@pet.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label> Edit the Pets's Name: </label>
    <br>
    <input type="text" name="pet[name]" value = <%= @pet.name%> id="pet_name">
    <br>



    <p> Select an existing owner or create one below. </p>
    <% @owner.each do |owner| %>
    <input type="radio" name="pet[owner]" id="<%= owner.id %>" value= "<%= owner.id %>" 
    <%='checked' if @pet.owner == owner %>
    >
    <%= owner.name %>
    <br>
    <% end %>

    <h3> New Owner </h3>
    <label> Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"><br>
    <br><br>




<input type="submit" value="Update Pet">
